<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Turbochat</a>
    <div class="search-form d-flex flex-column" data-controller="search-form">
      <%= form_with url: search_path, method: :post do |f| %>
        <%= f.search_field :search,
              class: "form-control me-2", placeholder: "Search for users",
              oninput: "this.form.requestSubmit()",
              data: { search_form_target: "input",
                      action: "focusin->search-form#displayResults focusout->search-form#hideResults" } %>
      <% end %>
      <div id="search_results" class="d-none" data-search-form-target="results" >
      </div>
    </div>
  </div>
</nav>
