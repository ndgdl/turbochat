<div id="chatroom_container" class="row bg-dark text-light">
  <div id="side_panel" class="col-md-4 col-sm-4">

    <%= render 'users/current_user' %>

    <h4> Users </h4>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <%= render @users %>
    </div>

    <h4> Private Rooms </h4>
    <%#= turbo_stream_from "private_rooms" %>
    <div id="private_rooms">
      <% @private_rooms.each do |private_rooms| %>
        <% other_user = private_rooms.other_participant(current_user) %>
        <%= render 'rooms/private_room', user: other_user %>
      <% end %>
    </div>

    <h4> Rooms </h4>
    <%= render 'layouts/new_room_form' %>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms">
      <%= render @rooms %>
    </div>
  </div>
