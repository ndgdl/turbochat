<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <div class="card mt-5">
        <article class="card-body">
          <h2 class="card-title text-center mb-4 mt-1">Sign in</h2>
          <hr>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="input-group mb-3">
              <span class="input-group-text"> <%= icon('fas', 'user') %></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                class: "form-control", placeholder: "Email" %>
            </div> <!-- input-group -->

            <div class="input-group mb-3">
              <span class="input-group-text"> <%= icon('fas', 'lock') %></span>
              <%= f.password_field :password, autocomplete: "current-password",
                                    class: "form-control", placeholder: "******" %>
            </div> <!-- input-group -->

            <% if devise_mapping.rememberable? %>
            <div class="form-check form-switch mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div> <!-- form-check -->
            <% end %>


            <%= f.submit "Log in", class: "btn btn-primary w-100 mb-3" %>

          <% end %>

          <%= render "devise/shared/link_new_password" %>
        </article>
      </div> <!-- card -->

      <div class="d-flex justify-content-center align-items-center gap-3 mt-3">
        <p class="text-muted m-0">Not registered yet?</p>
        <%= render "devise/shared/link_new_registration" %>
      </div>

    </div> <!-- col-sm-6 -->
  </div> <!-- row -->
</div> <!-- container -->
